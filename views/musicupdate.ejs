<%- include("partials/header.ejs") %>

<h1 class="white-text center signin-jumbotron">Create Music </h1>
<div class="container">
<div class="row ">
<div class="createMusic col s6">

  <form enctype="multipart/form-data" action="/admin/music/update/<%= music._id  %> " method="POST">
    <div class="file-field input-field ">
      <div class="btn">
        <span>File</span>
        <input name="musicPoster" type="file" multiple />
      </div>
      <div class="file-path-wrapper">
        <input
          class="file-path validate black-text"
          type="text"
          placeholder="Upload one or more files"
        />
      </div>
    </div>
    <div class="input-field">
      <input
        placeholder="Music Title"
        name="title"
        id="music-title"
        type="text"
        class="validate black-text"
        value="<%= music.title %> "
      />
      <label for="music-title">Title</label>
    </div>
    <div class="input-field">
      <input
        placeholder="Place Your Spotify Url Here"
        name="spotifyLink"
        id="spotify"
        type="text"
        class="validate black-text"
        value="<%= music.spotifyLink %>" 
      />
      <label for="spotify">Spotify</label>
    </div>
    <div class="input-field">
      <input
        placeholder="Place Your YouTube Url Here"
        name="youtubeLink"
        id="youtube"
        type="text"
        class="validate black-text"
        value="<%= music.youtubeLink %> "
      />
      <label for="youtube">YouTube</label>
    </div>
    <div class="input-field">
      <input
        placeholder="Place Your SoundCloud Url Here"
        name="soundcloudLink"
        id="soundcloud"
        type="text"
        class="validate black-text"
        value="<%= music.soundcloudLink %>" 
      />
      <label for="soundcloud">SoundCloud</label>
    </div>
    <div class="input-field">
      <input
        placeholder="Place Your Apple Music Url Here"
        name="applemusicLink"
        id="applemusic"
        type="text"
        class="validate black-text"
        value="<%= music.applemusicLink %>" 
      />
      <label for="applemusic">Apple Music</label>
    </div>

    <button class="btn waves-effect waves-light" type="submit">
      Submit
      <i class="material-icons right">send</i>
    </button>
  </form>
</div>
<div>
    <img src="<%= music.photoDetails.url %> " style="width: 390px; height: 470px; border-radius: 10px; margin-left:70px;">
</div>
</div>
</div>
<%- include("partials/footer.ejs") %>
